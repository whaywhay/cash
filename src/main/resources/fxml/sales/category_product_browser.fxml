<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
  fx:controller="kz.store.cash.fx.dialog.CategoryProductDialogController"
  fx:id="root"
  spacing="10" stylesheets="@../styles.css" styleClass="dialog-pane">

  <!-- Хлебные крошки: автоматически переносятся -->
  <FlowPane fx:id="breadcrumbs" hgap="6" vgap="6" />

  <!-- Список категорий/товаров -->
  <ListView fx:id="itemsList" VBox.vgrow="ALWAYS">
    <placeholder><Label text="Нет данных"/></placeholder>
  </ListView>

  <!-- Кнопки действий -->
  <HBox spacing="10" alignment="CENTER_RIGHT">
    <Button fx:id="backBtn" text="Назад"/>
    <Region HBox.hgrow="ALWAYS"/>
    <Button fx:id="addQuickBtn" text="В быстрые товары Добавить/Удалить"/>
    <Button fx:id="chooseBtn" text="Выбрать" defaultButton="true"/>
    <Button fx:id="closeBtn" text="Закрыть" cancelButton="true"/>
  </HBox>
</VBox>