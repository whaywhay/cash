<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
  fx:controller="kz.store.cash.fx.dialog.DiaryCustomersDialogController" fx:id="root"
  stylesheets="@../styles.css">

  <top>
    <HBox spacing="8" style="-fx-padding: 10;">
      <TextField fx:id="searchField" promptText="Поиск..." onAction="#onSearch"/>
      <Button text="Искать" onAction="#onSearch"/>
      <Region HBox.hgrow="ALWAYS"/>
      <Label styleClass="summary-label" text="0.00" fx:id="totalLabel"/>
      <ChoiceBox fx:id="orderChoice"/>
      <Button text="Закрыть" styleClass="btn-cancel-product-change"
        onAction="#onClose"/>
      <Button text="Записать" onAction="#onWriteDebt"
        styleClass="btn-save-product-change"/>
    </HBox>
  </top>

  <!-- ВАЖНО: оборачиваем таблицу в StackPane, а таблице задаём maxWidth/Height -->
  <center>
    <StackPane>
      <TableView fx:id="table" styleClass="main-table-view"
        maxWidth="Infinity" maxHeight="Infinity">
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
          <TableColumn fx:id="idCol" text="ID"/>
          <TableColumn fx:id="nameCol" text="Имя" prefWidth="220"/>
          <TableColumn fx:id="placeCol" text="Место" prefWidth="180"/>
          <TableColumn fx:id="marketTitleCol" text="Точка" prefWidth="200"/>
          <TableColumn fx:id="totalCol" text="Итого" prefWidth="140"/>
          <TableColumn fx:id="lastCol" text="Последняя операция" prefWidth="160"/>
        </columns>
      </TableView>
    </StackPane>
  </center>

  <bottom>
    <Pagination fx:id="pagination" BorderPane.alignment="CENTER"
      style="-fx-padding: 8;"/>
  </bottom>
</BorderPane>