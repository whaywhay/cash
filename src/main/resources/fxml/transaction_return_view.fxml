<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="kz.store.cash.fx.controllers.TransactionReturnController" fx:id="returnPane">

  <!-- Верхняя панель -->
  <top>
    <HBox spacing="10" style="-fx-padding: 5; -fx-background-color: #ffcc00;">
      <RadioButton fx:id="withPaymentReceiptRadio" text="С ЧЕКОМ" selected="true"/>
      <RadioButton fx:id="withoutPaymentReceiptRadio" text="БЕЗ ЧЕКА"/>
      <StackPane>
        <TextField fx:id="searchFieldById" promptText="Поиск чека по #" prefWidth="350"/>
        <TextField fx:id="searchFieldByProduct" promptText="Поиск товара" prefWidth="350"
          visible="false"/>
        <padding>
          <Insets top="10.0"/>
        </padding>
      </StackPane>
    </HBox>
  </top>

  <!-- Центральная часть -->
  <center>
    <StackPane>
      <TableView fx:id="salesReturnTable" editable="true">
<!--        <columnResizePolicy>-->
<!--          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>-->
<!--        </columnResizePolicy>-->
        <columns>
          <TableColumn fx:id="checkboxCol">
            <graphic>
              <CheckBox fx:id="headerCheckBox" onAction="#selectHeaderCheckBox"/>
            </graphic>
          </TableColumn>
          <TableColumn fx:id="indexCol" text="#"/>
          <TableColumn fx:id="nameCol" text="НАИМЕНОВАНИЕ"/>
          <TableColumn fx:id="priceCol" text="ЦЕНА"/>
          <TableColumn fx:id="qtyCol" text="КОЛИЧЕСТВО"/>
          <TableColumn fx:id="totalCol" text="СУММА"/>
        </columns>
      </TableView>
    </StackPane>
  </center>

  <!-- Нижняя часть -->
  <bottom>
    <HBox spacing="20" styleClass="bottom-bar">
      <!-- Левая панель -->
      <VBox spacing="20" styleClass="summary-box"
        alignment="CENTER_LEFT">
        <GridPane>
          <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" halignment="LEFT"/>
            <ColumnConstraints hgrow="ALWAYS" halignment="CENTER"/>
          </columnConstraints>
          <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="СУММА ВОЗВРАТА"
            styleClass="summary-label"/>
          <Label GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="returnSumLabel" text="00.00"
            styleClass="summary-value"/>
        </GridPane>
      </VBox>
      <!-- Пустой растягиваемый элемент между левым и правым -->
      <!--      <Region HBox.hgrow="ALWAYS"/>-->
      <!-- Правая панель -->
      <GridPane hgap="10" vgap="10" alignment="CENTER_RIGHT">
        <Button text="БЫСТРЫЕ ТОВАРЫ" styleClass="grid-btn" GridPane.rowIndex="0"
          GridPane.columnIndex="0" focusTraversable="false" disable="true"/>
        <Button text="КОЛИЧЕСТВО" onAction="#onQuantityDialog" styleClass="grid-btn"
          GridPane.rowIndex="0" GridPane.columnIndex="1" focusTraversable="false"/>

        <Button text="УДАЛИТЬ" onAction="#onDeleteSelectedOrChecked" styleClass="btn-delete"
          GridPane.rowIndex="1" GridPane.columnIndex="0"
          focusTraversable="false"/>
        <Button text="ВОЗВРАТ" onAction="#onReturnDialog" styleClass="btn-pay" GridPane.rowIndex="1"
          GridPane.columnIndex="1" focusTraversable="false"/>
      </GridPane>
    </HBox>
  </bottom>
</BorderPane>